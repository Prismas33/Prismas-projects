{
  "name": "nexus5-converter",
  "version": "1.0.0",
  "description": "App desktop Electron para converter projetos Next.js em APK Android",
  "main": "main.js",  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "package-win": "electron-packager . nexus5-converter --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "dependencies": {
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.nexus5.converter",
    "productName": "Nexus5 Converter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!.git"
    ],
    "win": {
      "target": "portable",
      "sign": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
