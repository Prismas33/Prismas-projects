rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===== PROJECTS =====
    // Apenas admins podem gerenciar projetos
    // TEMPORÁRIO: Permitindo leitura para teste das APIs
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ===== MESSAGES =====
    // Qualquer pessoa pode criar, só admins podem ler/editar/apagar
    // TEMPORÁRIO: Permitindo leitura para teste das APIs
    match /messages/{messageId} {
      allow create, read: if true;
      allow update, delete: if isAdmin();
    }
    
    // ===== NOTIFICATIONS =====
    // Qualquer pessoa pode criar, só admins podem ler/editar/apagar
    // TEMPORÁRIO: Permitindo leitura para teste das APIs
    match /notifications/{notificationId} {
      allow create, read: if true;
      allow update, delete: if isAdmin();
    }
    
    // ===== ADMIN NOTIFICATIONS =====
    // Qualquer pessoa pode criar, só admins podem ler/editar/apagar
    match /admin_notifications/{notificationId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // ===== PROJECT MESSAGES =====
    // Qualquer pessoa pode criar, só admins podem ler/editar/apagar
    match /project_messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // ===== CLIENTS =====
    // Qualquer pessoa pode criar/ler/atualizar, só admins podem apagar
    match /clients/{clientId} {
      allow create, read, update: if true;
      allow delete: if isAdmin();
    }
    
    // ===== PROPOSALS =====
    // Apenas admins podem gerenciar propostas
    match /proposals/{proposalId} {
      allow read, write: if isAdmin();
    }
    
    // ===== HELPER FUNCTIONS =====
    
    // Verificar se o usuário é admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email in [
               "geral.prismas@gmail.com",
               "contato@prismas33.com", 
               "dev@prismas33.com"
             ];
    }
  }
}