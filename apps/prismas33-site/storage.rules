rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow uploads para a pasta projects/ apenas para usuários autenticados
    match /projects/{imageId} {
      allow read: if true; // Permitir leitura pública
      allow write: if request.auth != null && 
                      request.resource.size < 5 * 1024 * 1024 && // Máximo 5MB
                      request.resource.contentType.matches('image/.*'); // Apenas imagens
    }
    
    // Negar acesso a outras pastas por padrão
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
