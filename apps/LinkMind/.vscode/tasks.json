{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start LinkMind Dev Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Backend Only",
			"type": "shell",
			"command": "nodemon",
			"args": [
				"server.js"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Frontend Only",
			"type": "shell",
			"command": "npm",
			"args": [
				"start"
			],
			"options": {
				"cwd": "${workspaceFolder}/client"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}